{
	"document_template": {
		"prefix": "document",
		"body": [
			"\\input texinfo @c -*-texinfo-*-",
			"@setfilename ${1:filename}",
			"@settitle ${2:program_title version}",
			"@documentdescription",
			"${3:document_description}",
			"@end documentdescription",
			"@documentlanguage ${4:ll[_CC]}",
			"",
			"@copying",
			"${5:program_description}",
			"",
			"Copyright @copyright{} ${CURRENT_YEAR:YYYY} ${6:your_name}",
			"",
			"@quotation",
			"${7:copying_notice}",
			"@end quotation",
			"@end copying",
			"",
			"@titlepage",
			"@title ${8:document_title}",
			"@author ${6}",
			"",
			"@page",
			"@vskip 0pt plus 1filll",
			"@insertcopying",
			"",
			"Published by ${6}",
			"@end titlepage",
			"",
			"@c @shortcontents",
			"@contents",
			"",
			"@ifnottex",
			"@node Top",
			"@top ${8}",
			"${5}",
			"@end ifnottex",
			"",
			"@menu",
			"* $9",
			"* Index:: Complete index.",
			"@end menu",
			"",
			"$0",
			"",
			"@node       Index",
			"@unnumbered Index",
			"@printindex cp",
			"",
			"@bye",
			""
		],
		"description": "Template for a document"
	},

	"at_character_escape": {
		"prefix": "@@",
		"body": [ "@@" ],
		"description": "Literal '@' character"
	},
	"sentence_end_exclamation": {
		"prefix": "@!",
		"body": [ "@!" ],
		"description": "Forced end of sentence with an exclamation mark"
	},
	"umlaut_accent": {
		"prefix": "@\"",
		"body": [ "@\"$1" ],
		"description": "Non-ASCII Umlaut Accent"
	},
	"acute_accent": {
		"prefix": "@'",
		"body": [ "@'$1" ],
		"description": "Non-ASCII Acute Accent"
	},
	"force_line_break": {
		"prefix": "@*",
		"body": [ "@*" ],
		"description": "Force line break"
	},
	"cedilla_accent": {
		"prefix": "@,{}",
		"body": [ "@,{$1}$0" ],
		"description": "Non-ASCII Cedilla Accent"
	},
	"discretionary_hyphen": {
		"prefix": "@-",
		"body": [ "@-" ],
		"description": "Discretionary Hyphen"
	},
	"sentence_end_period": {
		"prefix": "@.",
		"body": [ "@." ],
		"description": "Forced end of sentence with a period"
	},
	"allow_line_break": {
		"prefix": "@/",
		"body": [ "@/" ],
		"description": "Allow line break in printed manual"
	},
	"not_ending_sentence": {
		"prefix": "@:",
		"body": [ "@:" ],
		"description": "Not ending a sentence"
	},
	"macron_accent": {
		"prefix": "@=",
		"body": [ "@=$1" ],
		"description": "Non-ASCII Macron/Overbar Accent"
	},
	"sentence_end_question_mark": {
		"prefix": "@?",
		"body": [ "@?" ],
		"description": "Forced end of sentence with a question mark"
	},
	"circumflex_accent": {
		"prefix": "@^",
		"body": [ "@^$1" ],
		"description": "Non-ASCII Circumflex Accent"
	},
	"grave_accent": {
		"prefix": "@`",
		"body": [ "@`$1" ],
		"description": "Non-ASCII Grave Accent"
	},
	"open_brace_escape": {
		"prefix": "@{",
		"body": [ "@{" ],
		"description": "Literal '{' character"
	},
	"closed_brace_escape": {
		"prefix": "@}",
		"body": [ "@}" ],
		"description": "Literal '}' character"
	},
	"tilde_accent": {
		"prefix": "@~",
		"body": [ "@~$1" ],
		"description": "Non-ASCII Tilde Accent"
	},

	"multitable": {
		"prefix": "multitable",
		"body": [
			"@multitable @columnfractions .${1:0}",
			"@headitem ${2:head_items}",
			"",
			"@item ${3:items}",
			"",
			"@end multitable"
		],
		"description": "Create a multitable"
	}
}
